<Window x:Class="PapelariaApp.Views.ClientesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clientes"
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#3A7CA5">
    <Grid Margin="10,10,10,4">
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="3" >
            <StackPanel Margin="0,0,10,0">
                <Label Content="Nome" HorizontalAlignment="Left" FontWeight="Bold"/>
                <TextBox Width="150" Height="25" Text="{Binding NovoCliente.Nome}" ToolTip="Nome"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <Label Content="Email" HorizontalAlignment="Left" FontWeight="Bold"/>
                <TextBox Width="150" Height="25" Text="{Binding NovoCliente.Email}" ToolTip="Email"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,0">
                <Label Content="Telefone" HorizontalAlignment="Left" FontWeight="Bold"/>
                <TextBox Width="100" Height="25" Text="{Binding NovoCliente.Telefone}" ToolTip="Telefone"/>
            </StackPanel>

            <Button Content="Adicionar" Click="Adicionar_Click" Margin="10,10,0,0" Width="80"
                FontWeight="Bold" Background="LightBlue" Height="30"/>
        </StackPanel>

        <DataGrid
              ItemsSource="{Binding Clientes}"
              AutoGenerateColumns="False"
              IsReadOnly="True" Height="363" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="4,97,-4,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}"/>
                <DataGridTemplateColumn Header="Ações">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Excluir"
                                Click="Excluir_Click"
                                Background="#f66"
                                Foreground="White"
                                Padding="5,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
