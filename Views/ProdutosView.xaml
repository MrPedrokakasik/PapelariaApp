<Window x:Class="PapelariaApp.Views.ProdutosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produtos"
        Height="500" Width="650"
        WindowStartupLocation="CenterScreen"
        Background="#3A7CA5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
            <StackPanel Margin="0,0,10,0">
                <Label Content="Nome do Produto" HorizontalAlignment="Left" FontWeight="Bold"/>
                <TextBox Width="150" Height="25" Text="{Binding NovoProduto.Nome}" ToolTip="Nome"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <Label Content="Categoria" HorizontalAlignment="Left" FontWeight="Bold"/>
                <TextBox Width="120" Height="25" Text="{Binding NovoProduto.Categoria}" ToolTip="Categoria"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <Label Content="Preço" HorizontalAlignment="Left" FontWeight="Bold"/>
                <TextBox Width="80" Height="25"
         Text="{Binding NovoProduto.PrecoUnitario, UpdateSourceTrigger=PropertyChanged}"
         ToolTip="Preço"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <Label Content="Estoque" HorizontalAlignment="Left" FontWeight="Bold"/>
                <TextBox Width="80" Height="25"
         Text="{Binding NovoProduto.Quantidade, UpdateSourceTrigger=PropertyChanged}"
         ToolTip="Estoque"/>

            </StackPanel>

            <Button Content="Adicionar" Click="Adicionar_Click" Margin="10,0,0,0" Width="80"
                    Height="30" FontWeight="Bold" Background="LightBlue"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Produtos}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}"/>
                <DataGridTextColumn Header="Categoria" Binding="{Binding Categoria}"/>
                <DataGridTextColumn Header="Preço" Binding="{Binding PrecoUnitario}"/>
                <DataGridTextColumn Header="Estoque" Binding="{Binding Quantidade}"/>
                <DataGridTemplateColumn Header="Ações">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Excluir"
                                    Click="Excluir_Click"
                                    Background="#f66"
                                    Foreground="White"
                                    Padding="5,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
