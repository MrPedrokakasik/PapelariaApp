<Window x:Class="PapelariaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - PapelariaApp"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#3A7CA5">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="200">

            <Button Content="Clientes" Click="AbrirClientes" Margin="0,0,0,10"
                    Background="LightBlue"/>

            <Button Content="Produtos" Click="AbrirProdutos" Margin="0,0,0,10"
                    Background="lightblue"/>

            <Button Content="Vendas" Click="AbrirVendas" Margin="0,0,0,10"
                    Background="LightBlue"/>

            <Button Content="Sair" Click="FecharApp"
                    Background="LightBlue"/>
        </StackPanel>
    </Grid>
</Window>
